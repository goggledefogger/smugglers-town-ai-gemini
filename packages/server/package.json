{
  "name": "smugglers-town-server",
  "version": "0.1.0",
  "description": "Colyseus Game Server for Smuggler's Town",
  "type": "commonjs",
  "scripts": {
    "start": "node lib/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"tsc && node lib/index.js\"",
    "build": "tsc -b"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@smugglers-town/shared-schemas": "workspace:*",
    "@colyseus/core": "^0.15.0",
    "@colyseus/monitor": "^0.15.0",
    "@colyseus/schema": "^2.0.0",
    "colyseus": "^0.15.0",
    "dotenv": "^16.5.0",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "private": true
}
