{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@smugglers-town/shared-utils": ["../shared-utils/dist"],
      "@smugglers-town/shared-utils/*": ["../shared-utils/dist/*"],
      "@smugglers-town/shared-schemas": ["../shared-schemas/dist"],
      "@smugglers-town/shared-schemas/*": ["../shared-schemas/dist/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "references": [
    { "path": "../shared-utils" },
    { "path": "../shared-schemas" }
  ]
}
